{
  "name": "scorepads",
  "version": "1.0.0",
  "description": "Backend for the Scorepads application that lets you track scores for card games.",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "webpack --config server/config/webpack.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint server src",
    "lint:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "scorepads",
    "score",
    "games",
    "cards"
  ],
  "author": "Matteo Harutunian",
  "contributors": [
    "Marco Wilms"
  ],
  "license": "ISC",
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "web/*"
    ]
  },
  "dependencies": {
    "autoprefixer": "^9.7.5",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "mongodb": "^3.5.5",
    "nouislider": "^14.2.0",
    "npm": "^6.14.6",
    "uuid": "^7.0.0",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-json-strings": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "event-source-polyfill": "1.0.12",
    "htmlhint": "^0.11.0",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.1.3",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
