{
  "name": "scorepads",
  "version": "1.0.0",
  "description": "Backend for the Scorepads application that lets you track scores for card games.",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "webpack --config server/config/webpack.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint server src",
    "lint:css": "stylelint src/css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "scorepads",
    "score",
    "games",
    "cards"
  ],
  "author": "Matteo Harutunian",
  "contributors": [
    "Marco Wilms"
  ],
  "license": "ISC",
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "web/*"
    ]
  },
  "dependencies": {
    "autoprefixer": "^9.4.0",
    "body-parser": "^1.18.0",
    "express": "^4.16.0",
    "mongodb": "^3.1.0",
    "nouislider": "^12.1.0",
    "npm": "^6.5.0",
    "uuid": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "event-source-polyfill": "1.0.0",
    "htmlhint": "^0.10.0",
    "nodemon": "^1.18.0",
    "postcss-loader": "^3.0.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.10.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.0",
    "webpack-dev-middleware": "^3.5.0",
    "webpack-hot-middleware": "^2.24.0"
  }
}
